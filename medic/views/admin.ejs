<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
    </style>
</head>
<body>
    <h1>Admin Dashboard</h1>

    <section>
        <h2>Admin Details</h2>
        <p><strong>Email:</strong> <%= adminUser.email %></p>
        <p><strong>Username:</strong> <%= adminUser.username %></p>
        <p><strong>Contact:</strong> <%= adminUser.contact %></p>
        <p><strong>Role:</strong> <%= adminUser.role %></p>
    </section>

    <% for (const collectionName in allData) { %>
        <section>
            <h2><%= collectionName %> Collection</h2>
            <table id="<%= collectionName %>Table">
                <thead>
                    <tr>
                        <% if (allData[collectionName].length > 0) { %>
                            <% for (const key in allData[collectionName][0]) { %>
                                <th><%= key %></th>
                            <% } %>
                            <th>Actions</th>
                        <% } else { %>
                            <th>No Data Available</th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% allData[collectionName].forEach(function(item) { %>
                        <tr id="<%= item._id %>">
                            <% for (const key in item) { %>
                                <td><%= item[key] %></td>
                            <% } %>
                            <td>
                                <button onclick="confirmDelete('<%= collectionName %>', '<%= item._id.toString() %>')">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    <% } %>

    <script>
        function confirmDelete(collectionName, id) {
            if (confirm('Are you sure you want to delete this document?')) {
                deleteDocument(collectionName, id);
            }
        }

        function deleteDocument(collectionName, id) {
            fetch('/admin/delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ collectionName, id })
            })
            .then(response => {
                if (response.ok) {
                    // Remove the deleted row from the table
                    document.getElementById(id).remove();
                } else {
                    alert('Error deleting document. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error deleting document:', error);
                alert('An error occurred. Please try again later.');
            });
        }
    </script>
</body>
</html>
