<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <style>
        body { font-family: Arial, sans-serif; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
    </style>
</head>
<body>
    <h1>Admin Dashboard</h1>
    <section>
        <h2>Admin Details</h2>
        <p><strong>Email:</strong> <%= adminUser.email %></p>
        <p><strong>Username:</strong> <%= adminUser.username %></p>
        <p><strong>Contact:</strong> <%= adminUser.contact %></p>
        <p><strong>Role:</strong> <%= adminUser.role %></p>
    </section>

    <section>
        <h2>Database Overview</h2>
        <% for (const collectionName in allData) { %>
            <h3><%= collectionName %> Collection</h3>
            <table>
                <thead>
                    <tr>
                        <% for (const key in allData[collectionName][0]) { %>
                            <th><%= key %></th>
                        <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% allData[collectionName].forEach(function(item) { %>
                        <tr>
                            <% for (const key in item) { %>
                                <td><%= item[key] %></td>
                            <% } %>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </section>
</body>
</html>
